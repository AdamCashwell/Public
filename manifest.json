{
  "manifest_version": 3,
  "name": "Misinformation Checker",
  "version": "1.0",
  "description": "Checks if a selected statement is possibly misinformation or disingenuous.",
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "host_permissions": ["https://api.openai.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/gif1.gif", "images/gif2.gif"],
      "matches": ["<all_urls>"]
    }
  ]
}
